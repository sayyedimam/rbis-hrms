# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# MS SQL Server connection string
DATABASE_URL=mssql+pyodbc://localhost/example_db?driver=ODBC+Driver+17+for+SQL+Server&trusted_connection=yes&TrustServerCertificate=yes

# ============================================================================
# SECURITY & JWT
# ============================================================================
# ⚠️ IMPORTANT: Generate a strong secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Do NOT use default values in production!
SECRET_KEY=X5X_-CAVs-abDbCeHZhAtBNoVE8Am62bb3BOF25XVd7E
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Allowed origins for frontend requests (comma-separated, no spaces before/after commas)
# You can use either format:
#   Comma-separated: http://localhost:4200,https://yourdomain.com
#   JSON array:      ["http://localhost:4200","https://yourdomain.com"]
# Default if empty: http://localhost:4200
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# ============================================================================
# AZURE BLOB STORAGE
# ============================================================================
# Get these from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT_NAME;AccountKey=YOUR_ACCOUNT_KEY;EndpointSuffix=core.windows.net
AZURE_CONTAINER_NAME=attendance-records

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
# Gmail: Use "App Password" if 2FA is enabled (NOT your regular password)
# For Gmail: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@rbistech.com

# ============================================================================
# APPLICATION ENVIRONMENT
# ============================================================================
DEBUG=False
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_OTP_EMAIL=True
OTP_EXPIRY_MINUTES=10
MAX_OTP_ATTEMPTS=3

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60  # seconds
